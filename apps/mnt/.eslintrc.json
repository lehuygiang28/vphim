{
    "extends": [
        "plugin:@nx/react-typescript",
        "next",
        "next/core-web-vitals",
        "../../.eslintrc.json"
    ],
    "ignorePatterns": ["!**/*", ".next/**/*"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {
                "@next/next/no-html-link-for-pages": ["error", "apps/mnt/pages"],
                "@nx/enforce-module-boundaries": ["off"],
                "@next/next/no-img-element": ["off"]
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
            "env": {
                "jest": true
            }
        }
    ]
}
