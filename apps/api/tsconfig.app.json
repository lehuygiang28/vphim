{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "module": "commonjs",
        "types": ["node", "Multer"],
        "emitDecoratorMetadata": true,
        "target": "es2021",
        "paths": {
            "~lib/*": ["src/libs/*"]
        }
    },
    "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
    "include": ["src/**/*.ts"]
}
