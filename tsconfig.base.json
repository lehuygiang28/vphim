{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "isolatedModules": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["apps/fe/src/*"],
            "~api/app/*": ["apps/api/src/app/*"],
            "~api/libs/*": ["apps/api/src/libs/*"],
            "~fe/*": ["apps/fe/src/*"],
            "~mnt/*": ["apps/mnt/src/*"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
